<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.fontViewer.newController">
   <children>
      <Label fx:id="titleLabel" alignment="TOP_CENTER" prefHeight="50.0" prefWidth="265.0" text="FontViewer!" textAlignment="CENTER">
         <font>
            <Font size="36.0" />
         </font></Label>
      <VBox alignment="CENTER" prefHeight="50.0" prefWidth="210.0">
         <children>
            <TextArea fx:id="mainTextArea" maxHeight="1.7976931348623157E308" minHeight="300.0" prefHeight="262.0" prefWidth="600.0" promptText="Type Here" wrapText="true">
               <font>
                  <Font size="20.0" />
               </font>
            </TextArea>
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <ComboBox fx:id="testComboBox" onShown="#populateFonts" prefWidth="150.0" />
            <TextField prefHeight="24.0" prefWidth="66.0" promptText="Size" text="20" />
            <Button fx:id="applyButton" mnemonicParsing="false" onAction="#applyFont" text="Apply Font" textAlignment="CENTER" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
